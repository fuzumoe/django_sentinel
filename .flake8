[flake8]
# Disable Flake8 entirely in favor of Ruff
# This file ensures any Flake8 instances use compatible settings

# Line length to match Ruff configuration  
max-line-length = 88

# Disable all Flake8 checks since we use Ruff
ignore = 
    E,W,F,C,N,
    # All error codes - we use Ruff instead

# Exclude directories that Ruff also excludes
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    migrations,
    node_modules

# Indicate this project uses Ruff instead
per-file-ignores = 
    *:E,W,F,C,N
